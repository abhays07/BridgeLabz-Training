ðŸ”¹ Create Doctor Management Table
CREATE TABLE doctor_management (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50),
    specialization VARCHAR(50),
    contact VARCHAR(15),
    consultation_fee INT,
    specialization_id INT,
    is_active BOOLEAN DEFAULT TRUE
);

